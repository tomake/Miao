<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
    <ImageView android:id="@+id/iv_roomPic"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/default_pic"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_roomNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_roomPic"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/iv_roomPic"
        android:textSize="18sp"
        android:text="房间编号" />

    <TextView
        android:id="@+id/tv_roomTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_roomPic"
        android:layout_alignLeft="@+id/tv_roomNum"
        android:text="主题"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_population"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_roomNum"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="人数"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_space"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/iv_roomPic"
         />

    <TextView
        android:id="@+id/tv_requestJoin"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/tv_roomTheme"
        android:layout_alignBottom="@+id/tv_roomTheme"
        android:layout_alignRight="@+id/tv_population"
        android:text="申请加入"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/press_bg"
        android:visibility="invisible"
         />

</RelativeLayout>
